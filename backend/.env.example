
# Ambiente
NODE_ENV=development

# Servidor
PORT=3000

# Banco de Dados MongoDB
# Para MongoDB local: mongodb://localhost:27017/librarium
# Para MongoDB Atlas: mongodb+srv://usuario:senha@cluster.mongodb.net/librarium
MONGODB_URI=mongodb://localhost:27017/librarium

# IMPORTANTE: Mude esta chave para uma chave forte em produção!
JWT_SECRET=sua_chave_secreta_super_forte_aqui_mude_em_producao
JWT_EXPIRES_IN=7d

# Frontend URL para CORS
FRONTEND_URL=http://localhost:3001

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

